import { Astro } from 'astro';

const Card = ({ title, image, description }) => {
  return (
    <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-lg shadow-lg p-4">
      <img src={image} alt={title} class="rounded-t-lg w-full h-48 object-cover" />
      <h3 class="text-xl font-bold mt-2">{title}</h3>
      <p class="text-gray-300 mt-1">{description}</p>
    </div>
  );
};

export default Card;
