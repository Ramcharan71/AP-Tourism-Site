---

<Layout title="Andhra Pradesh Tourism - Explore the Land of Heritage">
  <Hero />

  <!-- Featured Destinations -->
  <section class="section-destinations">
    <div class="container">
      <div class="section-header">
        <h2>Must-Visit Destinations</h2>
        <p>Explore the diverse landscapes and rich heritage of Andhra Pradesh</p>
      </div>
      <div class="grid-4">
        {featuredDestinations.map(dest => (
          <DestinationCard 
            title={dest.title}
            image={dest.image}
            description={dest.description}
            link={dest.link}
          />
        ))}
      </div>
      <div class="section-footer">
        <a href="/destinations" class="btn btn-outline">View All Destinations</a>
      </div>
    </div>
  </section>

  <!-- Experiences -->
  <section class="section-experiences glass-effect">
    <div class="container">
      <div class="section-header">
        <h2>Unique Experiences</h2>
        <p>Create unforgettable memories in Andhra Pradesh</p>
      </div>
      <div class="grid-4">
        {experiences.map(exp => (
          <DestinationCard 
            title={exp.title}
            image={exp.image}
            description={exp.description}
            link={exp.link}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Facts -->
  <section class="section-facts">
    <div class="container">
      <div class="section-header">
        <h2>Andhra Pradesh at a Glance</h2>
      </div>
