---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const contactInfo = [
  {
    title: "Main Office",
    icon: "üè¢",
    details: [
      "Andhra Pradesh Tourism Development Corporation",
      "Tourism Bhavan, Himayatnagar",
      "Hyderabad - 500029",
      "Andhra Pradesh, India"
    ]
  },
  {
    title: "Phone",
    icon: "üìû",
    details: [
      "Toll Free: 1800-XXX-XXXX",
      "Landline: +91-40-XXXX-XXXX",
      "Mobile: +91-XXXXX-XXXXX",
      "Available: 24/7"
    ]
  },
  {
    title: "Email",
    icon: "üìß",
    details: [
      "General Inquiries: info@aptourism.gov.in",
      "Bookings: bookings@aptourism.gov.in",
      "Support: support@aptourism.gov.in",
      "Complaints: grievances@aptourism.gov.in"
    ]
  },
  {
    title: "Regional Offices",
    icon: "üìç",
    details: [
      "Visakhapatnam Tourism Office",
      "Vijayawada Tourism Office",
      "Tirupati Tourism Office",
      "Araku Valley Information Center"
    ]
  }
];

const faqItems = [
  {
    question: "How do I book Tirupati darshan tickets?",
    answer: "You can book online through the official TTD website or visit our tourism offices. We recommend booking at least 2-3 weeks in advance, especially during peak seasons."
  },
  {
    question: "What are the best months to visit Andhra Pradesh?",
    answer: "October to March is the best time with pleasant weather. Summer (March-June) is hot but ideal for hill stations. Monsoon (July-September) offers lush greenery and fewer crowds."
  },
  {
    question: "Are there package tours available?",
    answer: "Yes, we offer various packages including temple circuits, coastal tours, heritage trails, and customized itineraries. Contact us for detailed package information."
  },
  {
    question: "Is it safe for solo travelers and women?",
    answer: "Andhra Pradesh is generally safe for tourists. We recommend standard precautions, staying in registered accommodations, and using authorized transport services."
  }
];
---

<Layout title="Contact Us - Andhra Pradesh Tourism">
  <div class="contact-hero">
    <div class="contact-hero-overlay">
      <div class="container">
        <h1 class="contact-hero-title">Get in Touch</h1>
        <p class="contact-hero-subtitle">We're here to help plan your perfect journey</p>
      </div>
    </div>
  </div>

  <section class="contact-info-section">
    <div class="container">
      <div class="contact-grid">
        {contactInfo.map((info) => (
          <div class="info-card">
            <div class="info-icon">{info.icon}</div>
            <h3>{info.title}</h3>
            <ul>
              {info.details.map((detail) => (
                <li>{detail}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="contact-form-section">
    <div class="container">
      <div class="form-wrapper">
        <div class="form-header">
          <h2>Send Us a Message</h2>
          <p>Fill out the form below and we'll get back to you within 24 hours</p>
        </div>

        <form class="contact-form" id="contactForm">
          <div class="form-row">
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required placeholder="John Doe" />
            </div>
            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required placeholder="john@example.com" />
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone" placeholder="+91 XXXXX XXXXX" />
            </div>
            <div class="form-group">
              <label for="subject">Subject *</label>
              <select id="subject" name="subject" required>
                <option value="">Select a topic</option>
                <option value="booking">Booking Inquiry</option>
                <option value="package">Package Information</option>
                <option value="complaint">Complaint/Feedback</option>
                <option value="general">General Question</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="message">Message *</label>
            <textarea id="message" name="message" rows="6" required placeholder="Tell us how we can help you..."></textarea>
          </div>

          <button type="submit" class="submit-btn">
            <span>Send Message</span>
            <span class="btn-icon">‚úâÔ∏è</span>
          </button>
        </form>
      </div>
    </div>
  </section>

  <section class="faq-section">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq-grid">
        {faqItems.map((faq, index) => (
          <div class="faq-item">
            <div class="faq-question">
              <span class="faq-number">Q{index + 1}</span>
              <h3>{faq.question}</h3>
            </div>
            <p class="faq-answer">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="map-section">
    <div class="container">
      <h2 class="section-title">Visit Our Office</h2>
      <div class="map-placeholder">
        <div class="map-content">
          <div class="map-icon">üìç</div>
          <h3>Andhra Pradesh Tourism Office</h3>
          <p>Tourism Bhavan, Himayatnagar, Hyderabad - 500029</p>
          <a href="https://maps.google.com" target="_blank" class="map-link">Open in Google Maps ‚Üí</a>
        </div>
      </div>
    </div>
  </section>

  <section class="emergency-section">
    <div class="container">
      <div class="emergency-box">
        <h2>Emergency Assistance</h2>
        <p>For urgent travel assistance, medical emergencies, or safety concerns</p>
        <div class="emergency-contacts">
          <a href="tel:1800xxxxxxx" class="emergency-btn">
            <span class="emergency-icon">üö®</span>
            <span>Tourist Helpline: 1800-XXX-XXXX</span>
          </a>
          <a href="tel:100" class="emergency-btn">
            <span class="emergency-icon">üöî</span>
            <span>Police: 100</span>
          </a>
          <a href="tel:108" class="emergency-btn">
            <span class="emergency-icon">üöë</span>
            <span>Ambulance: 108</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .contact-hero {
    position: relative;
    height: 45vh;
    min-height: 350px;
    background: linear-gradient(135deg, #1E4D2B 0%, #5F8161 100%);
    overflow: hidden;
  }

  .contact-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23F0DE8C' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    animation: bgMove 20s linear infinite;
  }

  .contact-hero-overlay {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 1;
  }

  .contact-hero-title {
    font-size: 3.5rem;
    color: #F0DE8C;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    animation: fadeInUp 0.8s ease;
  }

  .contact-hero-subtitle {
    font-size: 1.3rem;
    color: rgba(255,255,255,0.95);
    animation: fadeInUp 1s ease;
  }

  .contact-info-section {
    padding: 70px 0;
    background: white;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
  }

  .info-card {
    background: linear-gradient(135deg, rgba(240, 222, 140, 0.05) 0%, rgba(184, 199, 127, 0.05) 100%);
    padding: 35px 28px;
    border-radius: 20px;
    text-align: center;
    transition: all 0.3s;
    border: 2px solid transparent;
  }

  .info-card:hover {
    transform: translateY(-8px);
    border-color: #B8C77F;
    box-shadow: 0 15px 40px rgba(30, 77, 43, 0.12);
  }

  .info-icon {
    font-size: 3.5rem;
    margin-bottom: 20px;
  }

  .info-card h3 {
    font-size: 1.5rem;
    color: #1E4D2B;
    margin-bottom: 20px;
  }

  .info-card ul {
    list-style: none;
    padding: 0;
  }

  .info-card li {
    color: #666;
    line-height: 1.8;
    font-size: 0.95rem;
    margin-bottom: 8px;
  }

  .contact-form-section {
    padding: 70px 0;
    background: linear-gradient(135deg, rgba(240, 222, 140, 0.08) 0%, rgba(184, 199, 127, 0.08) 100%);
  }

  .form-wrapper {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 50px 40px;
    border-radius: 25px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.08);
  }

  .form-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .form-header h2 {
    font-size: 2.5rem;
    margin-bottom: 12px;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .form-header p {
    color: #666;
    font-size: 1.05rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    font-weight: 600;
    color: #1E4D2B;
    margin-bottom: 8px;
    font-size: 0.95rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 12px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #B8C77F;
    box-shadow: 0 0 0 3px rgba(184, 199, 127, 0.1);
  }

  .form-group textarea {
    resize: vertical;
  }

  .submit-btn {
    background: var(--gradient-secondary);
    color: #1E4D2B;
    padding: 16px 40px;
    border: none;
    border-radius: 25px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    align-self: center;
    margin-top: 10px;
  }

  .submit-btn:hover {
    background: var(--gradient-warm);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(30, 77, 43, 0.2);
  }

  .btn-icon {
    font-size: 1.3rem;
  }

  .faq-section {
    padding: 70px 0;
    background: white;
  }

  .section-title {
    text-align: center;
    font-size: 2.8rem;
    margin-bottom: 50px;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    max-width: 1100px;
    margin: 0 auto;
  }

  .faq-item {
    background: linear-gradient(135deg, rgba(240, 222, 140, 0.05) 0%, rgba(184, 199, 127, 0.05) 100%);
    padding: 30px;
    border-radius: 18px;
    border-left: 4px solid #B8C77F;
    transition: all 0.3s;
  }

  .faq-item:hover {
    transform: translateX(5px);
    box-shadow: 0 8px 25px rgba(30, 77, 43, 0.1);
  }

  .faq-question {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 15px;
  }

  .faq-number {
    background: var(--gradient-secondary);
    color: #1E4D2B;
    padding: 5px 12px;
    border-radius: 15px;
    font-weight: 700;
    font-size: 0.9rem;
    flex-shrink: 0;
  }

  .faq-question h3 {
    font-size: 1.2rem;
    color: #1E4D2B;
    line-height: 1.5;
  }

  .faq-answer {
    color: #666;
    line-height: 1.7;
    font-size: 0.95rem;
    padding-left: 45px;
  }

  .map-section {
    padding: 70px 0;
    background: linear-gradient(to bottom, #f9faf5 0%, #ffffff 100%);
  }

  .map-placeholder {
    max-width: 900px;
    margin: 0 auto;
    background: linear-gradient(135deg, rgba(240, 222, 140, 0.1) 0%, rgba(184, 199, 127, 0.1) 100%);
    border-radius: 20px;
    padding: 60px 40px;
    text-align: center;
  }

  .map-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }

  .map-icon {
    font-size: 4rem;
    margin-bottom: 10px;
  }

  .map-content h3 {
    font-size: 1.8rem;
    color: #1E4D2B;
  }

  .map-content p {
    color: #666;
    font-size: 1.05rem;
  }

  .map-link {
    display: inline-block;
    background: var(--gradient-secondary);
    color: #1E4D2B;
    padding: 12px 28px;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s;
    margin-top: 10px;
  }

  .map-link:hover {
    background: var(--gradient-warm);
    transform: translateY(-2px);
  }

  .emergency-section {
    padding: 70px 0;
    background: var(--gradient-primary);
    position: relative;
    overflow: hidden;
  }

  .emergency-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(circle, rgba(240, 222, 140, 0.15) 0%, transparent 70%);
    animation: rotate 30s linear infinite;
  }

  .emergency-box {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .emergency-box h2 {
    font-size: 2.5rem;
    color: #F0DE8C;
    margin-bottom: 15px;
  }

  .emergency-box > p {
    font-size: 1.15rem;
    color: rgba(255,255,255,0.95);
    margin-bottom: 40px;
  }

  .emergency-contacts {
    display: flex;
    justify-content: center;
    gap: 25px;
    flex-wrap: wrap;
  }

  .emergency-btn {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    color: white;
    padding: 18px 30px;
    border-radius: 20px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 600;
    font-size: 1.05rem;
    transition: all 0.3s;
  }

  .emergency-btn:hover {
    background: white;
    color: #1E4D2B;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }

  .emergency-icon {
    font-size: 1.8rem;
  }

  @media (max-width: 768px) {
    .contact-hero-title {
      font-size: 2.5rem;
    }

    .contact-hero-subtitle {
      font-size: 1.1rem;
    }

    .form-wrapper {
      padding: 35px 25px;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-grid,
    .faq-grid {
      grid-template-columns: 1fr;
    }

    .emergency-contacts {
      flex-direction: column;
      align-items: stretch;
    }

    .emergency-btn {
      justify-content: center;
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Show success message (in production, this would send data to server)
    alert('Thank you for contacting us! We will get back to you within 24 hours.');
    form.reset();
  });
</script>