    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s;
  }

  .experience-card:hover .experience-image img {
    transform: scale(1.15) rotate(2deg);
  }

  .experience-category-badge {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: var(--gradient-warm);
    color: #1E4D2B;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    text-transform: uppercase;
    letter-spacing: 0.8px;
  }

  .experience-content {
    padding: 20px;
  }

  .experience-content h3 {
    font-size: 1.6rem;
    margin-bottom: 10px;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .experience-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 15px;
    font-size: 0.9rem;
  }

  .experience-highlights {
    margin: 15px 0;
    padding: 15px;
    background: linear-gradient(135deg, rgba(240, 222, 140, 0.05) 0%, rgba(184, 199, 127, 0.05) 100%);
    border-radius: 12px;
  }

  .experience-highlights h4 {
    font-size: 0.95rem;
    color: #1E4D2B;
    margin-bottom: 10px;
  }

  .experience-highlights ul {
    list-style: none;
    padding: 0;
  }

  .experience-highlights li {
    font-size: 0.85rem;
    color: #5F8161;
    padding: 5px 0;
    padding-left: 20px;
    position: relative;
    line-height: 1.4;
  }

  .experience-highlights li::before {
    content: '‚ú®';
    position: absolute;
    left: 0;
  }

  .experience-meta {
    display: flex;
    gap: 12px;
    margin: 12px 0;
    padding: 10px 0;
    border-top: 2px solid #f0f0f0;
    border-bottom: 2px solid #f0f0f0;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 0.85rem;
    color: #666;
    font-weight: 500;
  }

  .meta-icon {
    font-size: 1rem;
  }

  .experience-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15px;
  }

  .best-for {
    font-size: 0.8rem;
    color: #666;
