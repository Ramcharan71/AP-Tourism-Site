    from { background-position: 0 0; }
    to { background-position: 80px 80px; }
  }

  .culture-hero-overlay {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 1;
  }

