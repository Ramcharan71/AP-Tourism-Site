    position: relative;
    animation: fadeInUp 0.6s ease forwards;
  }

  .culture-card:hover {
    transform: translateY(-10px) scale(1.01);
    box-shadow: 0 20px 50px rgba(30, 77, 43, 0.2);
  }

  .culture-icon-wrapper {
    position: absolute;
    top: 18px;
    left: 18px;
    z-index: 3;
  }

  .culture-icon {
    font-size: 3.2rem;
    filter: drop-shadow(0 5px 10px rgba(0,0,0,0.4));
    display: inline-block;
    animation: float 3s ease-in-out infinite;
  }

  .culture-image {
    position: relative;
    height: 240px;
    overflow: hidden;
  }

  .culture-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s;
  }

  .culture-card:hover .culture-image img {
    transform: scale(1.12) rotate(1deg);
  }

  .culture-category-badge {
    position: absolute;
    bottom: 15px;
    right: 15px;
    background: var(--gradient-warm);
    color: #1E4D2B;
    padding: 8px 18px;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 700;
