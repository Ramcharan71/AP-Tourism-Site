    padding: 25px;
  }

  .culture-content h3 {
    font-size: 1.9rem;
    margin-bottom: 12px;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

