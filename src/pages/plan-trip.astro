    </div>
  </section>

  <section class="transport-section">
    <div class="container">
      <div class="section-header">
        <h2>Getting Around</h2>
        <p>Choose your preferred mode of transport</p>
      </div>
      <div class="transport-grid">
        {transportOptions.map((transport) => (
          <div class="transport-card">
            <div class="transport-icon">{transport.icon}</div>
            <h3>{transport.mode}</h3>
            <p class="transport-details">{transport.details}</p>
            <div class="connectivity">
              <strong>Connectivity:</strong> {transport.connectivity}
            </div>
            <div class="transport-tips">
              <span class="tip-icon">ğŸ’¡</span>
