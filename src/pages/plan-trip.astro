<Layout title="Plan Your Trip - Andhra Pradesh Tourism">
  <div class="plan-hero">
    <div class="plan-hero-overlay">
      <div class="container">
        <h1 class="plan-hero-title">Plan Your Perfect Trip</h1>
        <p class="plan-hero-subtitle">Let us help you create unforgettable memories in Andhra Pradesh</p>
      </div>
    </div>
  </div>

  <section class="trip-duration">
    <div class="container">
      <div class="section-header">
        <h2>How Long Will You Stay?</h2>
        <p>Choose your ideal trip duration based on available time</p>
      </div>
      <div class="duration-grid">
        {tripDurations.map((duration) => (
          <div class="duration-card">
            <div class="duration-icon">{duration.icon}</div>
            <div class="duration-days">{duration.days}</div>
            <h3>{duration.title}</h3>
            <p class="duration-desc">{duration.description}</p>
            <div class="suggested-routes">
              <h4>Suggested Routes:</h4>
              <ul>
                {duration.suggested.map((route) => (
                  <li>{route}</li>
                ))}
              </ul>
            </div>
            <div class="activities-tag">
              <span class="tag-icon">ğŸ¯</span>
              <span>{duration.activities}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="best-time">
    <div class="container">
      <div class="section-header">
        <h2>When to Visit?</h2>
        <p>Plan according to weather and festivals</p>
      </div>
      <div class="seasons-grid">
        {travelSeasons.map((season) => (
          <div class="season-card">
            <div class="season-header">
              <h3>{season.season}</h3>
              <span class="season-badge">{season.badge}</span>
            </div>
            <div class="temperature">ğŸŒ¡ï¸ {season.temp}</div>
            <p class="season-highlights">{season.highlights}</p>
            <div class="best-for">
              <h4>Best For:</h4>
              <ul>
                {season.best.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
            <div class="festivals">
              <h4>Major Festivals:</h4>
              <div class="festival-tags">
                {season.festivals.map((festival) => (
                  <span class="festival-tag">{festival}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="budget-section">
    <div class="container">
      <div class="section-header">
        <h2>Budget Planning</h2>
        <p>Estimate your daily expenses per person</p>
      </div>
      <div class="budget-grid">
        {budgetOptions.map((budget) => (
          <div class="budget-card">
            <div class="budget-icon">{budget.icon}</div>
            <h3>{budget.type}</h3>
            <div class="price-tag">{budget.perDay}/day</div>
            <div class="budget-breakdown">
              <div class="breakdown-item">
                <strong>Stay:</strong> {budget.accommodation}
              </div>
              <div class="breakdown-item">
                <strong>Food:</strong> {budget.food}
              </div>
              <div class="breakdown-item">
                <strong>Transport:</strong> {budget.transport}
              </div>
            </div>
            <div class="budget-tips">
              <h4>ğŸ’¡ Money-Saving Tips:</h4>
              <p>{budget.tips}</p>
            </div>
          </div>
        ))}
